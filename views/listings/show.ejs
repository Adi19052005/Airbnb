<% layout("/layouts/boilerplate") -%>


<body>
  <div class="container mt-3">
    <h3>Listing details:</h3>

    <div class="card mx-auto listing-card" style="width: 60%;">
      <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing image">
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b><br>
          <i><%= listing.owner ? listing.owner.username : 'Unknown Owner' %></i><br>
          <%= listing.description %><br>
          &#8377;<%= listing.price.toLocaleString("en-IN") %><br>
          <%= listing.location %><br>
          <%= listing.country %><br>
        </p>

        <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark mt-3">Edit this listing</a>
          <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" class="mt-2">
            <button class="btn btn-danger">Delete</button>
          </form>
        <% } %>
      </div>
    </div>

    <% if (currUser) { %>
      <div class="mt-5">
        <hr>
        <h4>Leave a review</h4>
        <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
          <div class="mb-3 mt-3">
            <label for="rating" class="form-label">Rating</label>
            <fieldset class="starability-basic">
              <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
              <input type="radio" id="rate1" name="review[rating]" value="1" />
              <label for="rate1" title="Terrible">1 star</label>
              <input type="radio" id="rate2" name="review[rating]" value="2" />
              <label for="rate2" title="Not good">2 stars</label>
              <input type="radio" id="rate3" name="review[rating]" value="3" />
              <label for="rate3" title="Average">3 stars</label>
              <input type="radio" id="rate4" name="review[rating]" value="4" />
              <label for="rate4" title="Very good">4 stars</label>
              <input type="radio" id="rate5" name="review[rating]" value="5" />
              <label for="rate5" title="Amazing">5 stars</label>
              <span class="starability-focus-ring"></span>
            </fieldset>
          </div>

          <div class="mb-3 mt-3">
            <label for="comments" class="form-label">Comment</label>
            <textarea name="review[comments]" id="comments" cols="30" rows="5" class="form-control" required></textarea>
            <div class="invalid-feedback">Please submit some comments</div>
          </div>
          <button class="btn btn-outline-dark mb-5">Submit</button>
        </form>
      </div>
    <% } %>

    <%if(listing.reviews.length>0){%>
    <div class="row">
      <h4>All reviews</h4>
      <% if (listing.reviews && listing.reviews.length > 0) { %>
        <% for (let review of listing.reviews) { %>
          <div class="card col-5 ms-3 mb-3">
            <div class="card-body">
              <h5 class="card-title"><%= review.author ? review.author.username : 'Unknown User' %></h5>
              <p class="card-text"><%= review.comments %></p>
              <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
            </div>

            <% if (
                currUser &&
                review.author &&
                review.author._id &&
                currUser._id.equals(review.author._id)
            ) { %>
              <form class="mb-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                <button class="btn btn-sm btn-dark">Delete</button>
              </form>
            <% } %>
          </div>
        <% } %>
      <% } else { %>
        <p>No reviews yet.</p>
      <% } %>
    </div>
     <%}%>
  <div class=" location-section">
  <h3 class="card-header">Where you'll be</h3>
  <br>
  <div id="map" style="height: 300px; border-radius: 10px; overflow: hidden;"></div>
</div>
